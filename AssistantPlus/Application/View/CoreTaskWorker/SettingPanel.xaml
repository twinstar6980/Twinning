<local:CustomControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:community="using:CommunityToolkit.WinUI"
	xmlns:communityControls="using:CommunityToolkit.WinUI.Controls"
	xmlns:local="using:Twinning.AssistantPlus"
	xmlns:localViewCoreTaskWorker="using:Twinning.AssistantPlus.View.CoreTaskWorker"
	xmlns:my="using:Twinning.AssistantPlus.Control"
	mc:Ignorable="d"
	x:DefaultBindMode="OneWay"
	x:Class="Twinning.AssistantPlus.View.CoreTaskWorker.SettingPanel"
	>
	<my:Stack
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch"
		Orientation="Vertical"
		Spacing="2"
		>
		<my:SettingItem
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Icon="{StaticResource FluentIconGlyph.StorageOptical}"
			Title="Kernel"
			>
			<my:SettingItem.Action>
				<my:Stack
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Orientation="Horizontal"
					Spacing="8"
					>
					<TextBox
						my:Stack.Weight="1"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						LostFocus="{x:Bind Controller.uKernelText_LostFocus}"
						Text="{x:Bind Controller.uKernelText_Text}"
						/>
					<Button
						ToolTipService.ToolTip="Pick"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						Click="{x:Bind Controller.uKernelPick_Click}"
						Content="{community:FontIcon FontSize={StaticResource MediumIconSize}, Glyph={StaticResource FluentIconGlyph.OpenInNewWindow}}"
						/>
				</my:Stack>
			</my:SettingItem.Action>
		</my:SettingItem>
		<my:SettingItem
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Icon="{StaticResource FluentIconGlyph.Code}"
			Title="Script"
			>
			<my:SettingItem.Action>
				<my:Stack
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Orientation="Horizontal"
					Spacing="8"
					>
					<TextBox
						my:Stack.Weight="1"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						LostFocus="{x:Bind Controller.uScriptText_LostFocus}"
						Text="{x:Bind Controller.uScriptText_Text}"
						/>
					<Button
						ToolTipService.ToolTip="Pick"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						Click="{x:Bind Controller.uScriptPick_Click}"
						Content="{community:FontIcon FontSize={StaticResource MediumIconSize}, Glyph={StaticResource FluentIconGlyph.OpenInNewWindow}}"
						/>
				</my:Stack>
			</my:SettingItem.Action>
		</my:SettingItem>
		<my:SettingItem
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Icon="{StaticResource FluentIconGlyph.BulletedList}"
			Title="Argument"
			>
			<my:SettingItem.Action>
				<my:Stack
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Orientation="Horizontal"
					Spacing="8"
					>
					<TextBox
						my:Stack.Weight="1"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						LostFocus="{x:Bind Controller.uArgumentText_LostFocus}"
						TextWrapping="Wrap"
						AcceptsReturn="True"
						Text="{x:Bind Controller.uArgumentText_Text}"
						/>
					<Button
						ToolTipService.ToolTip="Pick"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						Content="{community:FontIcon FontSize={StaticResource MediumIconSize}, Glyph={StaticResource FluentIconGlyph.OpenInNewWindow}}"
						>
						<Button.Flyout>
							<MenuFlyout Placement="TopEdgeAlignedRight">
								<MenuFlyoutItem
									Tag="LoadFile"
									Click="{x:Bind Controller.uArgumentPick_Click}"
									Icon="{community:FontIcon Glyph={StaticResource FluentIconGlyph.Document}}"
									Text="Load File"
									/>
								<MenuFlyoutItem
									Tag="LoadDirectory"
									Click="{x:Bind Controller.uArgumentPick_Click}"
									Icon="{community:FontIcon Glyph={StaticResource FluentIconGlyph.Folder}}"
									Text="Load Directory"
									/>
								<MenuFlyoutItem
									Tag="SaveFile"
									Click="{x:Bind Controller.uArgumentPick_Click}"
									Icon="{community:FontIcon Glyph={StaticResource FluentIconGlyph.Save}}"
									Text="Save File"
									/>
							</MenuFlyout>
						</Button.Flyout>
					</Button>
				</my:Stack>
			</my:SettingItem.Action>
		</my:SettingItem>
		<my:SettingItem
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Icon="{StaticResource FluentIconGlyph.ScrollUpDown}"
			Title="Automatic Scroll"
			>
			<my:SettingItem.Action>
				<my:Stack
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Orientation="Horizontal"
					Spacing="8"
					>
					<ToggleButton
						my:Stack.Weight="1"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						HorizontalContentAlignment="Left"
						IsChecked="{x:Bind Controller.uAutomaticScrollToggle_IsChecked}"
						Click="{x:Bind Controller.uAutomaticScrollToggle_Click}"
						Content="Enable"
						/>
				</my:Stack>
			</my:SettingItem.Action>
		</my:SettingItem>
		<my:SettingItem
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Icon="{StaticResource FluentIconGlyph.Touch}"
			Title="Immediate Launch"
			>
			<my:SettingItem.Action>
				<my:Stack
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Orientation="Horizontal"
					Spacing="8"
					>
					<ToggleButton
						my:Stack.Weight="1"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						HorizontalContentAlignment="Left"
						IsChecked="{x:Bind Controller.uImmediateLaunchToggle_IsChecked}"
						Click="{x:Bind Controller.uImmediateLaunchToggle_Click}"
						Content="Enable"
						/>
				</my:Stack>
			</my:SettingItem.Action>
		</my:SettingItem>
		<my:SettingItem
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Icon="{StaticResource FluentIconGlyph.Characters}"
			Title="Message Font"
			>
			<my:SettingItem.Action>
				<my:Stack
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Orientation="Horizontal"
					Spacing="8"
					>
					<TextBox
						my:Stack.Weight="1"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						LostFocus="{x:Bind Controller.uMessageFontText_LostFocus}"
						Text="{x:Bind Controller.uMessageFontText_Text}"
						/>
					<Button
						ToolTipService.ToolTip="Installed Font"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Top"
						Click="{x:Bind Controller.uMessageFontPick_Click}"
						Content="{community:FontIcon FontSize={StaticResource MediumIconSize}, Glyph={StaticResource FluentIconGlyph.BulletedList}}"
						/>
				</my:Stack>
			</my:SettingItem.Action>
		</my:SettingItem>
	</my:Stack>
</local:CustomControl>
